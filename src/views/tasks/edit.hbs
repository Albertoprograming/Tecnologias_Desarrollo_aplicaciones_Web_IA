<div
    class="block mx-auto my-12 p-8 bg-white w-full max-w-2xl border border-gray-200 rounded-lg shadow-lg text-gray-800">
    <h1 class="text-center text-3xl font-bold mb-6">Editar comentario</h1>
    {{#each registros}}
    <form action="/tasks/edit/{{id}}" method="POST" class="space-y-4">
        <select
            class="border border-gray-300 rounded-md bg-gray-100 w-full text-lg py-2 focus:ring-2 focus:ring-indigo-600 focus:border-transparent"
            name="profesor">
            <!-- Opciones del profesor -->

            <option value="" disabled>Selecciona Profesor</option>
            <option value="Esau Escobar Dominguez" {{#if (eq profesor "Esau Escobar Dominguez" )}}selected{{/if}}>Esau Escobar Dominguez</option>
            <option value="Jesus" {{#if (eq Profesor "Jesus" )}}selected{{/if}}>Jesus</option>
            <!-- Agrega más opciones de profesores según sea necesario -->
        </select>
        </select>

        <textarea
            class="border border-gray-300 rounded-md bg-gray-100 w-full text-lg py-2 focus:ring-2 focus:ring-indigo-600 focus:border-transparent h-40"
            placeholder="Descripción de la tarea" name="descripcion">{{descripcion}}</textarea>

        <div class="text-center">
            <label for="calificacion" class="block mb-2 text-lg">Calificación</label>
            <input type="number" id="calificacion" name="calificacion" value="{{calificacion}}" min="0" max="10"
                required
                class="border border-gray-300 rounded-md bg-gray-100 text-lg py-2 px-4 focus:ring-2 focus:ring-indigo-600 focus:border-transparent w-full sm:w-1/4">
        </div>

        <button type="submit"
            class="rounded-md bg-indigo-600 w-full text-lg text-white font-semibold py-3 hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-700 focus:border-transparent">Actualizar</button>
    </form>
    {{/each}}
</div>